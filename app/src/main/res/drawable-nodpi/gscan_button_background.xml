<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>

            <stroke
                android:width="3dp"
                android:color="#ffffff" />

            <solid
                android:color="#E0E0E0" >
            </solid>

            <corners
                android:radius="10dp" />

            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />

        </shape>

    </item>

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#ffffff" />
            <solid
                android:color="#ffffff" >
            </solid>
            <corners
                android:radius="10dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>

